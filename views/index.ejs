<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MY APP</title>
  <script src="/main.js"></script>
</head>
<body>
  <h1> May Node and Express be with you. </h1>
  <form action="/quotes" method="POST">
  	<input type="text" placeholder="name" name="name">
  	<input type="text" placeholder="quote" name="quote">
  <button type="submit">Submit</button>
</form>


<h2> Quotes </h2>

<ul class="quotes">
  <!-- Loop through quotes -->
  <% for(var i = 0; i < quotes.length; i++) {%>
    <li class="quote">
      <!-- Output name from the iterated quote object -->
      <span id="name_<%= quotes[i].name %>" ondblclick="deleteit(this)"><%= quotes[i].name %></span>:
      <!-- Output quote from the iterated quote object -->
      <span id="quote_<%= quotes[i].name %>" onclick="changeText(this)"><%= quotes[i].quote %></span>
    </li>
  <% } %>
</ul>

</body>
</html>
